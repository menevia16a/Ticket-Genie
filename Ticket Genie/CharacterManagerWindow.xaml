<Window x:Class="Ticket_Genie.CharacterManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ticket_Genie"
        mc:Ignorable="d"
        Background="#FF8A8A8A"
        ResizeMode="NoResize"
        Title="Character List" Height="450" Width="800"
        WindowStyle="ToolWindow">
    <Grid>
        <ListBox x:Name="CharactersList" Margin="10" VerticalAlignment="Top" Height="300" HorizontalContentAlignment="Center" SelectionMode="Single" Background="#FF58607B" SelectionChanged="OnCharacterSelected" DisplayMemberPath="name"/>
        <Button Content="Select" Margin="0,351,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="156" Height="40" Background="#6495ED" Foreground="White" Click="OnSelectClick"/>
    </Grid>
</Window>
