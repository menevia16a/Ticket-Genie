<Window x:Class="Ticket_Genie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ticket_Genie"
        mc:Ignorable="d"
        Title="Ticket Genie" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Character Manager"/>
            <MenuItem Header="About"/>
            <MenuItem Header="Exit" Click="OnExitClick"/>
        </Menu>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="150"/>
                <ColumnDefinition Width="*" MinWidth="150"/>
            </Grid.ColumnDefinitions>
            <ListBox x:Name="TicketList" ItemsSource="{Binding OpenTicketsList}" Grid.Column="0" Background="#FF8A8A8A"/>
            <ListView x:Name="TicketView" ItemsSource="{Binding TicketInformationPanel}" Grid.Column="1" Background="#FF8A8A8A">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock x:Name="TickeID" Text="" FontWeight="Bold" FontSize="16"/>
                            <TextBlock x:Name="TicketName" Text="" FontSize="12"/>
                            <TextBlock x:Name="TicketDescription" Text="" FontSize="10"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Window>
